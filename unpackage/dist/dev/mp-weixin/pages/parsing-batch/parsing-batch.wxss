.parsing {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  /* 语音识别 */
}
.parsing-addr {
  background-color: #ffffff;
  padding: 20rpx;
}
.parsing-addr .title {
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx 0;
}
.parsing-addr-nian {
  background-color: #515151;
  color: #FDD605;
  font-size: 26rpx;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.parsing-addr .discern {
  width: 100%;
  height: 500rpx;
  border: 2rpx solid #ddd;
}
.parsing-addr .discern .button-wraper {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding: 0 60rpx;
}
.parsing-addr .discern .button-wraper-left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.parsing-addr .discern .button-wraper-left .line {
  width: 2rpx;
  height: 40rpx;
  background-color: #999;
  margin: 0 26rpx 0 36rpx;
}
.parsing-addr .discern .button-wraper-left .iconfont {
  font-size: 42rpx;
}
.parsing-addr .discern .button-wraper-left .tips {
  margin-top: 8rpx;
  width: 210rpx;
  height: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FDD605;
  color: #ffffff;
  border-radius: 8rpx;
  font-weight: 600;
}
.parsing-addr .parsing-addr-textarea {
  width: 100%;
  padding: 30rpx;
  font-size: 24rpx;
  height: 410rpx;
}
.parsing-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 18rpx 18rpx 0 0;
  font-weight: bold;
}
.parsing .copy-close-btn, .parsing .speak-close-btn {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.parsing .speak-box {
  /* padding-bottom: 30rpx; */
  height: 550rpx;
}
.parsing .speak-title {
  width: 100%;
  text-align: center;
  font-weight: bold;
  font-size: 32rpx;
  padding: 40rpx 0;
}
.parsing .speak-tips {
  width: 100%;
  text-align: center;
  color: #888;
}
.parsing .button-box {
  width: 152rpx;
  height: 152rpx;
  border-radius: 50%;
  background: #FFD500;
  margin: auto;
  margin-top: 110rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.parsing .button-box > ._i {
  font-size: 60rpx;
  background: transparent;
}
.parsing .button-box > ._i.moveIcon {
  color: #fff;
}
.parsing .dotmove:after {
  overflow: hidden;
  display: inline-block;
  vertical-align: bottom;
  -webkit-animation: ellipsis 2s infinite;
          animation: ellipsis 2s infinite;
  content: "\2026";
  /* ascii code for the ellipsis character */
}
@-webkit-keyframes ellipsis {
from {
    width: 4rpx;
}
to {
    width: 35rpx;
}
}
@keyframes ellipsis {
from {
    width: 4rpx;
}
to {
    width: 35rpx;
}
}
.parsing .butboxmo {
  -webkit-animation: myfirst 1.5s ease infinite normal;
          animation: myfirst 1.5s ease infinite normal;
}
.parsing .butboxmo > image {
  width: 152rpx;
  height: 152rpx;
}
@-webkit-keyframes myfirst {
0% {
    width: 152rpx;
    height: 152rpx;
    background-color: #f4ca44;
    margin-top: 100rpx;
}
100% {
    width: 300rpx;
    height: 300rpx;
    background-color: rgba(244, 202, 68, 0.1);
    margin-top: 35rpx;
}
}
@keyframes myfirst {
0% {
    width: 152rpx;
    height: 152rpx;
    background-color: #f4ca44;
    margin-top: 100rpx;
}
100% {
    width: 300rpx;
    height: 300rpx;
    background-color: rgba(244, 202, 68, 0.1);
    margin-top: 35rpx;
}
}

